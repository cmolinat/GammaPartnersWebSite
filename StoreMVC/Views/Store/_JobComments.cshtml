@model IEnumerable< StoreMVC.Models.JobComment>


<div class="container">
    <div class="row">
        <div class="col-md-4 ">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <span class="glyphicon glyphicon-comment"></span>
                        @Model.Count() Recent Comments
                    </h3>
                </div>
                <div class="panel-body" style="max-height:300px; overflow-y:scroll;">
                    <ul class="media-list">
                        @if (Model.Count() > 0)
                        {
                            foreach (var c in Model)
                            {
                                <li class="media">
                                    <div class="media-body">
                                        <h4 class="media-heading">
                                            @c.SubmittedBy
                                            <br>
                                            <small>
                                                @c.DateSubmitted.ToShortDateString()
                                            </small>
                                        </h4>
                                        <p>
                                            @c.Comment
                                        </p>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

