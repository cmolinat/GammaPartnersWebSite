@model StoreMVC.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<div class="row">
    <div class="col-xs-4 item-photo">
        <img src="@Url.Content("~/Images/"+Model.FileName)" alt="@Model.Title" height="250" width="250" />
    </div>
    <div class="col-xs-3" style="border:0px solid gray">
        <p>Price: @Html.DisplayFor(model => model.Details.Price)</p>
        <div class="section">
            <p style="padding:15px;">
                <small>
                    @Html.DisplayFor(model => model.Details.LongDesctiption)
                </small>
            </p>
        </div>

        <div class="section" style="padding-bottom:20px;">
            <button class="btn btn-success" id="btnAddComment">
                <span style="margin-right:20px" class="glyphicon glyphicon-comment" aria-hidden="true">
                </span> Make a comment
            </button>

        </div>
        <section>
            @Html.ActionLink("Go back", "Index")
        </section>

    </div>
    <div id="dvComments" class="col=xs-5">

    </div>
</div>

<!-- Modal -->
<div class="modal modal-wide-130 fade" id="md_abc" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                    <span class="widget-icon">
                        <i class="fa fa-edit"></i>
                    </span>
                    <label id="lb_modal">
                        Add comment
                    </label>
                </h4>
            </div>
            <div id="modal_body" class="modal-body">
                <div class="container">
                    <div class="col-md-8">
                        <div class="form-area">
                            <form id="frmComment" role="form">
                                @Html.HiddenFor(model => model.Id, new { id = "JobId", name = "JobId" })

                                <br style="clear:both">
                                <h3 style="margin-bottom: 25px; text-align: center;">Give us your opinion of this job.</h3>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="SubmittedBy" name="Name" placeholder="Name" required>
                                </div>

                                <div class="form-group">
                                    <textarea class="form-control" type="textarea" id="Comment" placeholder="Message" maxlength="140" rows="7"></textarea>
                                </div>

                                <button type="button" id="btnSaveComment" name="submit" class="btn btn-primary pull-right">Submit comment</button>
                            </form>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>
<script type="text/javascript" src="@Url.Content("/Scripts/Details.js")"></script>