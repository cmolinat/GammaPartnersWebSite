<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Lucky seven restorations.</title>
    <link href="~/Images/logo1.png" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <style>
        body {
            background: #151414;
        }

        #navbar-primary .navbar-nav {
            width: 100%;
            text-align: center;
            background-color: #332d2d;
        }

        .navbar-nav li {
            display: inline-block;
            float: none;
        }

        .navbar-nav a :hover {
            background: #358ebc;
        }

        .navbar-nav a {
            padding-left: 30px;
            padding-right: 30px;
        }

        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }

        .carousel-inner img {
            width: 80%; /* Set width to 100% */
            margin: auto;
            min-height: 130px;
        }

        @@media (max-width: 600px) {
            .carousel-caption {
                display: none;
            }
        }

        .noBullets {
            list-style: none;
            padding: auto;
        }

        #last-footer h5 {
            text-align: center;
        }

        .footlinks li a {
            text-align: center;
            margin-left: 5px;
        }

        .subscribe li {
            padding: 3px;
        }
    </style>
</head>
<body>

    <nav id="navbar-primary" class="navbar" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-primary-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbar-primary-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Finished Jobs", "Index", "Store")</li>

                    <li><a href="#"><img id="logo-navbar-middle" src="@Url.Content("~/Images/logo1.png")" width="70" alt="Logo Thing main logo"></a></li>
                    <li>@Html.ActionLink("Make a request", "NewRequest", "Store")</li>
                    @Html.Partial("_LoginPartial")
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("View requests", "ListRequests", "Store")</li>
                    }
                </ul>

            </div><!-- /.navbar-collapse -->

        </div><!-- /.container-fluid -->
    </nav>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            <div class="item active">
                <img src="@Url.Content("~/Images/restoration0.png")" alt="Chania" width="100%" height="100%">
                <div class="carousel-caption">
                    <h3>Restore it</h3>
                    <p>Don't throw it away, give it life again.</p>
                </div>
            </div>
            <div class="item">
                <img src="@Url.Content("~/Images/restoration00.png")" alt="Chania" width="100%" height="100%">
                <div class="carousel-caption">
                    <h3>If you can dream it, we can do it</h3>
                    <p>We have the best professionals working with us.</p>
                </div>
            </div>

        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div id="body">

        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    @*<footer>
            <div class="content-wrapper">
                <div class="float-left">
                    @*<p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>*@
    <div class="container">
        <div class="row">
        </div>
    </div>
    

    
    @RenderSection("scripts", required: false)
</body>
</html>
